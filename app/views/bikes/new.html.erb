<% if user_signed_in? %>
  <% if current_user.role=="full_admin" %>
<h1>Define new bike</h1>

<%= form_for :bike, url: bikes_path do |f| %>
<p>
        <%= f.label :bike_name %><br>
        <%= f.text_field :bike_name %>
      </p>

      <p>
        <%= f.label :brand %><br>
        <%= f.select :brand, [['BMW', "BMW"],['Ducati', "Ducati"],['Harley-Davidson', "Harley-Davidson"], ['Honda', "Honda"], ['Suzuki', "Suzuki"],['Kawasaki', "Kawasaki"],['Yamaha', "Yamaha"]]%>
      </p>
     
      <p>
        <%= f.label :bike_type %><br>
        <%= f.select :bike_type, [['Cruiser', "Cruiser"],['Roadster', "Roadster"],['Sportbike', "Sportbike"], ['Touring', "Touring"], ['Adventure', "Adventure"]]%>
      </p>

      <p>Input a picture that will be used for the intro :</p>
      <%= f.file_field :picturetop %><br>

      <p>Input a the picture of the bike in png with transparency :</p>
      <%= f.file_field :picturebike %><br>

      <p>2nd large picture in the bottow</p>
      <%= f.file_field :picture2 %><br>

      <p>
        <%= f.label :year %><br>
        <%= f.text_field :year %>
      </p>

      <p>
        <%= f.label :cylinder_cc %><br>
        <%= f.text_field :cylinder_cc %>
      </p>

      <p>
        <%= f.label :power_hp %><br>
        <%= f.text_field :power_hp %>
      </p>

      <p>
        <%= f.label :weight_kg %><br>
        <%= f.text_field :weight_kg %>
      </p>

      <p>
        <%= f.label :weight_lb %><br>
        <%= f.text_field :weight_lb %>
      </p>
       <p>
        <%= f.label :price_usd %><br>
        <%= f.text_field :price_usd %>
      </p>

      <p>
        <%= f.label :intro %><br>
        <%= f.text_area :intro %>
      </p>

      <p>
        <%= f.label :Youtubereview1 %><br>
        <%= f.text_area :Youtubereview1 %>
      </p>

      <p>
        <%= f.label :Youtubereview2 %><br>
        <%= f.text_area :Youtubereview2 %>
      </p>

      <p>
        <%= f.label :Youtubereview3 %><br>
        <%= f.text_area :Youtubereview3 %>
      </p>

      <p>
        <%= f.label :conclusion %><br>
        <%= f.text_area :conclusion %>
      </p>

      <p>
        <%= f.submit %>
      </p>      

    <a><%= link_to 'Back', bikes_path %></a>

<% end %>
<% end %>
<% end %>