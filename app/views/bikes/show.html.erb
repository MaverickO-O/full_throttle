<!-- bike picture -->


<div style="background: no-repeat url(<%= @bike.pictureintro %>) 50% / 100%;position: relative;">
   <img src="<%= @bike.pictureintro %>" style="height:100%; width: 100%; object-fit: contain;visibility: hidden;vertical-align: top;" />
   
   <div class="picturetobackground">
     <div id="nothing_left">
     </div>
     <div id="menu_right">
      <div id="inside_menu">  
       <div class="name_bar_logo">
         <%= image_tag("/assets/logo/#{ @bike.brand.downcase }.png", style:'height: 100px;') %>
       </div>
       <div id="name_bar_title" class="name_bar_logo">
         <p><h2><%= @bike.bike_name %></h2></p>
       </div>
       <div>
         <li>Type > <%= @bike.bike_type %></li>
         <li>Displacement > <%= @bike.cylinder_cc %> CC</li>
         <li>Power > <%= @bike.power_hp %> HP</li>
         <li>Weight > <%= @bike.weight_kg %>kg</li>
         <li>Price > $<%= @bike.price_usd %></li>
       </div> 
       <div class="name_bar_logo">
         <img src="<%= @bike.picturebike %>" style="width: 350px;">
       </div>
      </div>
     </div>
   </div>
</div>



